                    <Button
                        android:text="11"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:id="@+id/button11"
                        android:background="@drawable/button_border_user"
                        android:onClick="gridEdit"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >


                    <Button
                        android:text="12"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:id="@+id/button12"
                        android:background="@drawable/button_border_user"
                        android:onClick="gridEdit"/>

                    <Button
                        android:text="13"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:id="@+id/button13"
                        android:background="@drawable/button_border_user"
                        android:onClick="gridEdit"/>

                    <Button
                        android:text="14"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:id="@+id/button14"
                        android:background="@drawable/button_border_user"
                        android:onClick="gridEdit"/>

                    <Button
                        android:text="15"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:id="@+id/button15"
                        android:background="@drawable/button_border_user"
                        android:onClick="gridEdit"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <!--Restart and Auto Buttons horizontal orientation-->


                    <Button
                        android:text="Restart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button17"
                        android:layout_weight="1"
                        android:onClick="restartButton"/>

                    <ToggleButton
                        android:text="Edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toggleButton4"
                        android:layout_weight="1"
                        android:onClick="editButton"
                        android:textOn="Edit: On"
                        android:textOff="Edit: Off"
                        android:textColorLink="@android:color/holo_blue_light" />

                    <Button
                        android:text="Auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button16"
                        android:layout_weight="1"
                        android:onClick="autoFinish"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout7"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <!--First 5 switches-->
                    <Button
                        android:background="@drawable/leta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchA"
                        android:layout_weight="1"
                        android:onClick="switchA"/>

                    <Button
                        android:background="@drawable/letb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchB"
                        android:layout_weight="1"
                        android:onClick="switchB"/>

                    <Button
                        android:background="@drawable/letc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchC"
                        android:layout_weight="1"
                        android:onClick="switchC"/>

                    <Button
                        android:background="@drawable/letd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchD"
                        android:layout_weight="1"
                        android:onClick="switchD"/>

                    <Button
                        android:background="@drawable/lete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchE"
                        android:layout_weight="1"
                        android:onClick="switchE"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout8"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:background="@drawable/letf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchF"
                        android:layout_weight="1"
                        android:onClick="switchF"/>

                    <Button
                        android:background="@drawable/letg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchG"
                        android:layout_weight="1"
                        android:onClick="switchG"/>

                    <Button
                        android:background="@drawable/leth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchH"
                        android:layout_weight="1"
                        android:onClick="switchH"/>

                    <Button
                        android:background="@drawable/leti"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchI"
                        android:layout_weight="1"
                        android:onClick="switchI"/>

                    <Button
                        android:background="@drawable/letj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/switchJ"
                        android:layout_weight="1"
                        android:onClick="switchJ"/>
                    <!--Last 5 switches-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout9"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Switches count: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="17sp"
                            android:id="@+id/switchCount"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="17sp"
                            android:id="@+id/moves"/>

                    </LinearLayout>

                    <TextView
                        android:text="Sequence: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="17sp"
                        android:id="@+id/sequence"
                        android:scrollbars = "vertical"/>

                </LinearLayout>

            </LinearLayout>


